{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "22.0.0",

	"compilerOptions": {
		"lib": ["es2023"],
		"module": "node16",
		"target": "es2022",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",

		"outDir": "./dist",
		/* Alias */
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},

		"types": ["node"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "test"]
}
